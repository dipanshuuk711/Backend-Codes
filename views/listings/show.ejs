<%layout("layouts/boilerplate.ejs")%>
     <div class="row mt-3">
          <div class="col-8 offset-3 my-2">
               <h3><b><%= listing.title %></b></h3>
          </div>
          <div class="card col-6 offset-3 show-card">
               <img src="<%=listing.image%>" alt="listing_image" class="card-img-top show-img">
               <div class="card-body">
                    <p class="card-text mt-3">
                         <%= listing.description %> <br>
                              &#x20B9;<%= listing.price.toLocaleString() %> <br>
                                   <%= listing.location %> <br>
                                        <%= listing.country %>
                    </p>
               </div>
          </div>
     </div>
     <div class="btns mb-3">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3">Edit</a>
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
               <button class="btn btn-dark offset-2">Delete</button>
          </form>
     </div>
     <div class="col-8 offset-3 my-2">
          <hr>
          <h4>Leave a Review</h4>
          <form action="">
               <div class="">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" class="form-range" name="review[rating]" id="rating" min="1" max="5">
               </div>
               <div>
                    <label for="comment" class="form-label">Comment</label>
                    <br>
                    <textarea type="text" class="form-control" rows="5" cols="30" name="review[comment]" id="comment"></textarea>
               </div>
               <button class="btn btn-outline-dark my-3">Submit</button>
          </form>
     </div>